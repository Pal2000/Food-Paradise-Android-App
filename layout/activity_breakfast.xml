<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start"
    tools:context=".breakfast">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/nav_toolbar"
            android:background="#FF3D00"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".breakfast">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BREAKFAST"
                android:textColor="#FD3F03"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="Total Bill: "
                    android:layout_marginLeft="10dp"
                    android:id="@+id/bill"
                    android:textSize="18dp"
                    android:textColor="#FA3D01"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_toEndOf="@+id/bill"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="18dp"
                    android:id="@+id/ed"
                    android:textSize="17dp"
                    android:hint="0"
                    android:textColor="#FA3E02"
                    android:layout_toRightOf="@+id/bill" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proceed"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/pro"
                    android:background="@drawable/button_background"
                    android:layout_alignParentRight="true" />


            </RelativeLayout>

            <ScrollView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/banananutbread" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:text="Banana Nut Bread    $150/-"
                            android:textSize="16dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:background="#F37795"
                            android:textSize="15dp"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:id="@+id/b1"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/idliandchutney" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="Idli with Chutney $250/-"
                            android:textSize="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:textSize="15dp"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:id="@+id/b2"
                            android:background="#F37795"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/paper_masala_dosa" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="Masala Dosa $200/-"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:textSize="15dp"
                            android:background="#F37795"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:id="@+id/b3"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/cereals" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="Cereals $110/-"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:background="#F37795"
                            android:textSize="15dp"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:id="@+id/b4"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/butteredcrumpet" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="Buttered Crumpet $200/-"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#F37795"
                            android:text="Add To Cart"
                            android:textSize="15dp"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:id="@+id/b5"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/pesarattu" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="Pesarattu  $350/-"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:textSize="15dp"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:id="@+id/b6"
                            android:background="#F37795"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/nasilemak" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="Nasi Lemak $230/-"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:textSize="15dp"
                            android:background="#F37795"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:id="@+id/b7"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/buttenaan" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="Butter Naa $190/-"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:background="#F37795"
                            android:textSize="15dp"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:id="@+id/b8"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/navheader"
        android:layout_gravity="start"
        app:menu="@menu/mymenu"
        tools:ignore="MissingClass" />
    </androidx.drawerlayout.widget.DrawerLayout>
