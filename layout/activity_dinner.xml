<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start"
    tools:context=".dinner">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/nav_toolbar"
        android:background="#FD3F03"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DINNER"
                android:textColor="#FF4003"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="Total Bill: "
                    android:layout_marginLeft="10dp"
                    android:id="@+id/bill"
                    android:textSize="18dp"
                    android:textColor="#FB3E03"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_toEndOf="@+id/bill"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="18dp"
                    android:id="@+id/ed"
                    android:textSize="17dp"
                    android:hint="0"
                    android:textColor="#FB3F03"
                    android:layout_toRightOf="@+id/bill" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proceed"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/pro"
                    android:background="@drawable/button_background"
                    android:layout_alignParentRight="true" />


            </RelativeLayout>
            <ScrollView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/veg_roll" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:text="Spinach Rolls  $450/-"
                            android:textSize="16dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:background="#F37795"
                            android:textSize="15dp"
                            android:id="@+id/b1"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/vegbiryani" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="Veg Biryani $350/-"
                            android:textSize="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:textSize="15dp"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:id="@+id/b2"
                            android:background="#F37795"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/potato" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="Sahi Paneer $250/-"
                            android:textSize="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:textSize="15dp"
                            android:id="@+id/b3"
                            android:background="#F37795"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/buttenaan" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="ButterNaan $110/-"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:background="#F37795"
                            android:textSize="15dp"
                            android:id="@+id/b4"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/image3" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="Mix veg Rolls $200/-"
                            android:textSize="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#F37795"
                            android:text="Add To Cart"
                            android:textSize="15dp"
                            android:id="@+id/b5"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/pulao" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="Pulao       $190/-"
                            android:textSize="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:textSize="15dp"
                            android:id="@+id/b6"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:background="#F37795"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/haloumilasagne" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="Haloumi lasagne $500/-"
                            android:textSize="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:textSize="15dp"
                            android:id="@+id/b7"
                            android:background="#F37795"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/pasta" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:text="Pasta      $230/-"
                            android:textSize="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textFontWeight="@android:integer/config_longAnimTime"
                            android:padding="10dp"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Cart"
                            android:background="#F37795"
                            android:textSize="15dp"
                            android:id="@+id/b8"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/navheader"
        android:layout_gravity="start"
        app:menu="@menu/mymenu"
        tools:ignore="MissingClass" />
    </androidx.drawerlayout.widget.DrawerLayout>
